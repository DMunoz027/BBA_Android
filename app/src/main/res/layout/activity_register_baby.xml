<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.RegisterBabyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/_24dp"
        android:paddingBottom="@dimen/_32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_information"
            android:textAlignment="center"
            android:textSize="@dimen/_24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:layout_marginStart="@dimen/_14dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_14dp"
            app:cardCornerRadius="@dimen/_24dp"
            app:cardElevation="@dimen/_8dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imgSelected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/pick_photo"
                android:src="@drawable/logo_app" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/_16sp"
            android:id="@+id/btnUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:text="@string/upload_photography" />

        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_24dp"
            android:elevation="@dimen/_10dp"
            app:cardCornerRadius="@dimen/_20dp"
            app:cardElevation="@dimen/_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/name"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@drawable/bg_edit_text_custom"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="@dimen/_20dp"
                    app:boxCornerRadiusBottomStart="@dimen/_20dp"
                    app:boxCornerRadiusTopEnd="@dimen/_20dp"
                    app:boxCornerRadiusTopStart="@dimen/_20dp"
                    app:boxStrokeWidth="@dimen/_2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        app:hintTextColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/date_birth"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@drawable/bg_edit_text_custom"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="@dimen/_20dp"
                    app:boxCornerRadiusBottomStart="@dimen/_20dp"
                    app:boxCornerRadiusTopEnd="@dimen/_20dp"
                    app:boxCornerRadiusTopStart="@dimen/_20dp"
                    app:boxStrokeWidth="@dimen/_2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtBirthDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="date"
                        app:hintTextColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/gender"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@drawable/bg_edit_text_custom"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxCornerRadiusBottomEnd="@dimen/_20dp"
                    app:boxCornerRadiusBottomStart="@dimen/_20dp"
                    app:boxCornerRadiusTopEnd="@dimen/_20dp"
                    app:boxCornerRadiusTopStart="@dimen/_20dp"
                    app:boxStrokeWidth="@dimen/_2dp"
                    app:hintEnabled="false">

                    <Spinner
                        android:id="@+id/spinGender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        app:hintTextColor="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/blood_type"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@drawable/bg_edit_text_custom"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxCornerRadiusBottomEnd="@dimen/_20dp"
                    app:boxCornerRadiusBottomStart="@dimen/_20dp"
                    app:boxCornerRadiusTopEnd="@dimen/_20dp"
                    app:boxCornerRadiusTopStart="@dimen/_20dp"
                    app:boxStrokeWidth="@dimen/_2dp"
                    app:hintEnabled="false">

                    <Spinner
                        android:id="@+id/spinBloodType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        app:hintTextColor="@color/white" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/age"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@drawable/bg_edit_text_custom"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="@dimen/_20dp"
                    app:boxCornerRadiusBottomStart="@dimen/_20dp"
                    app:boxCornerRadiusTopEnd="@dimen/_20dp"
                    app:boxCornerRadiusTopStart="@dimen/_20dp"
                    app:boxStrokeWidth="@dimen/_2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        app:hintTextColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/birth_weight"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@drawable/bg_edit_text_custom"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="@dimen/_20dp"
                    app:boxCornerRadiusBottomStart="@dimen/_20dp"
                    app:boxCornerRadiusTopEnd="@dimen/_20dp"
                    app:boxCornerRadiusTopStart="@dimen/_20dp"
                    app:boxStrokeWidth="@dimen/_2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtBirthWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        app:hintTextColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/weight_current"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@drawable/bg_edit_text_custom"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="@dimen/_20dp"
                    app:boxCornerRadiusBottomStart="@dimen/_20dp"
                    app:boxCornerRadiusTopEnd="@dimen/_20dp"
                    app:boxCornerRadiusTopStart="@dimen/_20dp"
                    app:boxStrokeWidth="@dimen/_2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtWeightCurrent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        app:hintTextColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/birth_size"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@drawable/bg_edit_text_custom"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="@dimen/_20dp"
                    app:boxCornerRadiusBottomStart="@dimen/_20dp"
                    app:boxCornerRadiusTopEnd="@dimen/_20dp"
                    app:boxCornerRadiusTopStart="@dimen/_20dp"
                    app:boxStrokeWidth="@dimen/_2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtBirthSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        app:hintTextColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/size_current_cm"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@drawable/bg_edit_text_custom"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="@dimen/_20dp"
                    app:boxCornerRadiusBottomStart="@dimen/_20dp"
                    app:boxCornerRadiusTopEnd="@dimen/_20dp"
                    app:boxCornerRadiusTopStart="@dimen/_20dp"
                    app:boxStrokeWidth="@dimen/_2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtSizeCurrent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        app:hintTextColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24dp"
            android:layout_marginTop="@dimen/_24dp"
            android:layout_marginEnd="@dimen/_24dp"
            android:background="@drawable/bg_button_blue"
            android:elevation="@dimen/_10dp"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>